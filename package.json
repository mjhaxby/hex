{
  "name": "hex",
  "version": "3.4.1",
  "description": "Learning activity creator.",
  "main": "main.js",
  "scripts": {
    "app:dir": "electron-builder --dir",
    "app:dist": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "mjhaxby/hex"
  },
  "keywords": [
    "language",
    "learning"
  ],
  "author": "Morgan Haxby <info@mjhaxby.fr> (http://www.mjhaxby.fr)",
  "homepage": "https://github.com/mjhaxby/hex",
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.2.1",
    "electron-packager": "^17.1.2"
  },
  "fontend": {
    "config": {
      "applicationName": "Hex"
    }
  },
  "dependencies": {
    "adm-zip": "^0.5.10",
    "async": "^3.2.5",
    "buffer-image-size": "^0.6.4",
    "electron-context-menu": "^3.6.1",
    "electron-default-menu": "^1.0.2",
    "electron-request": "^1.8.1",
    "image-size": "^1.1.1",
    "octokit": "^3.1.2",
    "showdown": "^2.1.0"
  },
  "build": {
    "appId": "com.mjhaxby.hex",
    "mac": {
      "category": "public.app-category.education",
      "icon": "buildResources/icon.icns",
      "target": {
        "target": "default",
        "arch": [
          "x64",
          "arm64",
          "universal"
        ]
      }
    },
    "win": {
      "icon": "buildResources/icon.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "desktop": {
        "StartupNotify": "false",
        "Encoding": "UTF-8",
        "MimeType": "x-scheme-handler/deeplink"
      },
      "target": [
        "AppImage",
        "rpm",
        "deb"
      ]
    },
    "deb": {
      "priority": "optional"
    },
    "fileAssociations": [
      {
        "ext": "hext",
        "name": "hex Table File",
        "description": "hex table file",
        "role": "Editor"
      },
      {
        "ext": "hexp",
        "name": "hex Profile",
        "description": "hex profile",
        "role": "Editor"
      }
    ]
  }
}
